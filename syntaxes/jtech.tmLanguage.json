{
  "scopeName": "text.html.php.jtech",
  "fileTypes": ["jtech.php"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#jtech-directives"
    },
    {
      "include": "#jtech-echo"
    },
    {
      "include": "#php-tags"
    },
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "{{--",
          "end": "--}}",
          "name": "comment.block.jtech"
        }
      ]
    },
    "jtech-directives": {
      "patterns": [
        {
          "name": "keyword.control.jtech",
          "match": "@(if|else|elseif|endif|foreach|endforeach|forelse|endforelse|while|endwhile|for|endfor|break|continue|switch|endswitch|case|default)\\b"
        },
        {
          "name": "keyword.control.jtech",
          "match": "@(auth|guest|endauth|endguest|production|env|endenv|hasSection|sectionMissing|unless|endunless|isset|endisset|empty|endempty|error|enderror)\\b"
        },
        {
          "name": "storage.type.jtech",
          "match": "@(extends|section|endsection|yield|include|includeIf|includeWhen|includeFirst|stack|push|endpush|prepend|endprepend|props|aware|component|endcomponent|slot|endslot)\\b"
        },
        {
          "name": "support.function.jtech",
          "match": "@(dd|dump|csrf|method|lang|choice|inject|json)\\b"
        },
        {
          "name": "keyword.other.custom.jtech",
          "match": "@[a-zA-Z0-9_]+"
        }
      ]
    },
    "jtech-echo": {
      "patterns": [
        {
          "name": "meta.embedded.block.php",
          "begin": "\\{\\{\\s*",
          "end": "\\s*\\}\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.jtech" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.jtech" }
          },
          "patterns": [{ "include": "source.php" }]
        },
        {
          "name": "meta.embedded.block.php",
          "begin": "\\{!!\\s*",
          "end": "\\s*!!\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.jtech" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.jtech" }
          },
          "patterns": [{ "include": "source.php" }]
        }
      ]
    },
    "php-tags": {
      "patterns": [
        {
          "include": "source.php"
        }
      ]
    }
  }
}

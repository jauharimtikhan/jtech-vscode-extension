{
  "name": "jtech-framework-support",
  "displayName": "JTech Framework Support",
  "publisher": "jauhar-imtikhan",
  "description": "Official support for JTech Framework (Blade Syntax, Snippets, & Icons).",
  "version": "0.0.1",
  "icon": "./logo-jtech.png",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jtech",
        "aliases": [
          "JTech Blade",
          "jtech"
        ],
        "extensions": [
          ".jtech.php"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/logo-jtech.svg",
          "dark": "./icons/logo-jtech.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "jtech",
        "scopeName": "text.html.php.jtech",
        "path": "./syntaxes/jtech.tmLanguage.json",
        "embeddedLanguages": {
          "source.php": "php",
          "source.css": "css",
          "source.js": "javascript"
        }
      }
    ],
    "iconThemes": [
      {
        "id": "jtech-icon-theme",
        "label": "JTech Icons",
        "path": "./icons/jtech-icon-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "jtech",
        "path": "./snippets/jtech.json"
      },
      {
        "language": "jtech",
        "path": "./snippets/html-standard.json"
      }
    ],
    "configuration": {
      "title": "Jtech",
      "properties": {
        "Jtech.phpEnvironment": {
          "type": "string",
          "enum": [
            "auto",
            "herd",
            "valet",
            "sail",
            "lando",
            "ddev",
            "local"
          ],
          "enumItemLabels": [
            "Auto Detect",
            "Herd",
            "Valet",
            "Sail",
            "Lando",
            "DDEV",
            "Local"
          ],
          "markdownEnumDescriptions": [
            "Auto detect the local PHP environment.",
            "Auto detect PHP version Herd is using for the project.",
            "Auto detect PHP version Valet is using for the project.",
            "Sail",
            "Lando",
            "DDEV",
            "Use PHP installed on the local machine."
          ],
          "default": "auto",
          "markdownDescription": "Local PHP environment. If you have a value for `#Jtech.phpCommand#` this setting will be ignored and that value will be used instead."
        },
        "Jtech.phpCommand": {
          "type": "string",
          "description": "Template for running PHP code. Use {code} as an optional placeholder for the php file to run. e.g. `php \"{code}\"`.\n\nIf no {code} is present, code filepath will be appended to the command."
        },
        "Jtech.basePath": {
          "type": "string",
          "default": "",
          "markdownDescription": "_Relative_ base path for the Jtech project. This is used to resolve paths in the project. e.g. src, code/backend\n\n_Requires extension reload after changing._"
        },
        "Jtech.showErrorPopups": {
          "type": "boolean",
          "default": true,
          "description": "Show popups for errors."
        },
        "Jtech.env.viteQuickFix": {
          "type": "boolean",
          "default": true,
          "description": "Enable quickfix for adding VITE_ variables from regular env variables."
        },
        "Jtech.eloquent.generateDocBlocks": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate Eloquent doc blocks for models as IDE helpers."
        },
        "Jtech.blade.autoSpaceTags": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add spacing around Blade echo and comment tags."
        },
        "Jtech.pint.runOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run Pint on the current file when saved."
        },
        "Jtech.appBinding.diagnostics": {
          "type": "boolean",
          "default": true,
          "generated": true,
          "description": "Enable diagnostics for app bindings."
        },
        "Jtech.appBinding.hover": {
